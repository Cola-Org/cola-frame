	block scripts
		script(src="./resources/jquery/jquery-2.1.3.js")
		script(src="./resources/jquery/jquery.cookie.js")
		script(src="./resources/cola-ui/3rd.js")
		script(src="./resources/cola-ui/semantic.js")
		script(src="./resources/cola-ui/cola.js")
