extends ../.cola
append head
	link(rel="stylesheet", type="text/css", href="./example/master-detail.css")
block body
	.ui.segment

		#categoryPager.secondary
			.header.item 产品分类
			div.control.item
				div.teal(c-widget="button;icon:plus;caption:添加; click:addCategory")
			.right.menu
				.item(page-code="pages")
		#categoryList
	.ui.segment
		#productPager.secondary
			.header.item 产品列表
			div.control.item
				div.teal(c-widget="button;icon:plus;caption:添加; click:addProduct")
			.right.menu
				.item(page-code="pages")
		#productList
	#categoryLayer.content-background
		.caption-bar
			i.icon.user
			span.caption 产品分类维护
			.tools
				div.basic.circular(c-widget="button; caption:返回; click:categoryCancel; icon:angle right; " +
				"iconPosition:right")
		.ui.segment.basic
			.ui.form
				.fields
					.field.three.wide
						label Category Name
						div(c-widget="Input; bind:customCategory.categoryName; ")
				.fields
					.field.three.wide
						label Category Description
						textarea(c-bind="customCategory.description")
		.ui.segment.basic
			div.big.positive.circular(c-widget="button; caption:Save; icon:checkmark; click:categorySave")
			div.big.negative.circular(c-widget="button; caption:Cancel; icon:remove; click:categoryCancel")

	#productLayer.content-background
		.caption-bar
			i.icon.user
			span.caption 产品信息维护
			.tools
				div.basic.circular(c-widget="button; caption:返回; click:productCancel; icon:angle right; " +
				"iconPosition:right")
		.ui.segment.basic
			.ui.time-line
				.items
					.item
						.label Category Information
						.icon
							i.icon.cube
						.content
							.ui.form
								.fields
									.field.three.wide
										label Category ID
										div(c-widget="Input; bind:categorys.id; readOnly:true")
									.field.three.wide
										label Category Name
										div(c-widget="Input; bind:categorys.categoryName;readOnly:true")
					.item
						.label Basic Information
						.icon
							i.icon.cube
						.content
							.ui.form
								.fields
									.field.three.wide
										label Product Name
										div(c-widget="Input; bind:customProduct.productName;")
								.fields
									.field.three.wide
										label quantityPerUnit
										div(c-widget="Input; bind:customProduct.quantityPerUnit;")
					.item
						.label Other Information
						.icon
							i.icon.cube
						.content
							.ui.form
								.fields
									.field.three.wide
										label Unit Price
										div(c-widget="Input; bind:customProduct.unitPrice;")
									.field.three.wide
										label Units In Stock
										div(c-widget="Input; bind:customProduct.unitsInStock;")
									.field.three.wide
										label Units On Order
										div(c-widget="Input; bind:customProduct.unitsOnOrder;")
		.ui.segment.basic
			div.big.positive.circular(c-widget="button; caption:Save; icon:checkmark; click:productSave")
			div.big.negative.circular(c-widget="button; caption:Cancel; icon:remove; click:productCancel")










append scripts
	script(src="./example/master-detail.js")