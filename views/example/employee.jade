extends ../.cola
append head
	link(rel="stylesheet", type="text/css", href="./example/employee.css")
block body
	div#mainView.v-box
		.boxul.ui.blue.fragment.fluid-layout
			li
				label 姓名
				div.mini(c-widget="input; bind:contain")
			li
				button.blue(c-widget="Button; icon:search; caption:查询; click:search ")
		.flex-box
			.ui.fragment
				.secondary(c-widget="pager; bind:employees;")
					.control.item
						div
							.mini.teal(c-widget="button; icon:plus; caption:添加; click:add;")
					.right.menu
						.item(page-code="pages")
				div#employeeTable
					template(name="operations")
						div
							.ui.buttons.icon.mini
								.ui.teal.basic.button(c-onclick="edit(item)")
									i.icon.edit
								.ui.orange.basic.button(c-onclick="del(item)")
									i.icon.trash.outline

	#editLayer.default-background
		.v-box
			.caption-bar.box

				i.edit.icon
				span.caption 产品信息维护
				.tools
					div.basic.circular(c-widget="button; icon:angle right; iconPosition:right; caption:返回; " +
					"click:cancel")

			.content.content-background.flex-box
				.ui.padded.segment.basic
					.ui.time-line.circular
						.items
							.item
								.icon
									i.icon.home
								.label 基本信息
								.content
									.ui.segment.basic
										.ui.form
											.fields
												.field.one.wide
													label 姓
													div(c-widget="input; bind:editItem.lastName ")
												.field.two.wide
													label 名
													div(c-widget="input; bind:editItem.firstName")
											.fields
												.field.three.wide
													label 性别
													#radioGroup(c-widget="RadioGroup; name:brand; bind:editItem.sex")
											.fields
												.field.three.wide
													label 出生日期
													#birthDatePicker
							.item
								.icon
									i.icon.fax
								.label 联系方式
								.content
									.ui.segment.basic
										.ui.form
											.fields
												.field.three.wide
													label 电话
													div(c-widget="input; bind:editItem.phone")
							.item
								.icon
									i.icon.lab
								.label 职位信息
								.content
									.ui.segment.basic
										.ui.form
											.fields
												.field.three.wide
													label 称呼
													div(c-widget="input; bind:editItem.titleOfCourtesy")
												.field.three.wide
													label 头衔
													div(c-widget="input; bind:editItem.title")
											.fields
												.field.three.wide
													label 入职日期
													#hireDatePicker

							.item
								.icon
									i.icon.disk.outline
								.label 家庭住址
								.content
									.ui.segment.basic
										.ui.form
											.fields
												.field.two.wide
													label 国家
													#countryDropDown
												.field.two.wide
													label 省份
													div(c-widget="input; bind:editItem.region")
												.field.two.wide
													label 市/区/县
													div(c-widget="input; bind:editItem.city")
											.fields
												.field.two.wide
													label 邮政编码
													div(c-widget="input; bind:editItem.postalCode")
											.fields
												.field.six.wide
													label 详细地址
													textarea(c-bind="editItem.address")


							.item
								.icon
									i.icon.disk.outline
								.label 其他信息
								.content
									.ui.segment.basic
										.ui.form
											.fields
												.six.wide.field
													label 备注
													textarea(c-bind="editItem.extension")

			div.box
				.ui.segment.basic
					div.negative.large(c-widget="button;icon:remove; caption:取消; click:cancel")
					div.positive.large(c-widget="button;icon:checkmark; caption:提交; click:ok")

append scripts
	script(src="./example/employee.js")