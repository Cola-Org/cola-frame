extends ../.cola
append head
	link(rel="stylesheet", type="text/css", href="./example/crud.css")
block body
	div#mainView
		ul.form.ui.cn.floating
			li
				label 产品编号
				div.mini(c-widget="input; bind:condition.code")
			li
				label 产品名称
				div.mini(c-widget="input; bind:condition.name")
			li
				label 经营商
				div.mini(c-widget="input;bind:condition.shop")
			li
				label 价格
				div.mini(c-widget="input;bind:condition.price")
			li
				label 鞋码
				div.mini(c-widget="input;bind:condition.size")
			li
				label 折扣
				div.mini(c-widget="input;bind:condition.sales")
			li
				button.blue(c-widget="Button; icon:search; caption:查询; click:search ")

		.floating.content-background(style="margin-top:0.6em")

			div#productTable
				template(name="operations")
					div
						div(c-widget="button;icon:trash outline;class:red basic;size:mini;click:{{del(item)}}")
						div(c-widget="button;icon:edit;class:orange basic;size:mini;click:{{edit(item)}}")
			.secondary(c-widget="pager; bind:products;")
				.control.item
					.ui.basic.segment
						a.basic.teal(c-widget="button;icon:plus; caption:添加; click:add")
				.right.menu
					a.item(page-code="pages")

	#editLayer.default-background
		.h-box(style={height: "4em"}).dark-background
			.flex-box
				.ui.segment.basic
					h4.dark-background
						i.edit.icon
						span 产品信息维护
			.box
				.ui.basic.segment
					div.basic.circular(c-widget="button; icon:angle right; iconPosition:right; caption:返回; " +
					"click:cancel")

		.content.content-background
			.ui.segment.basic
				.ui.time-line.circular
					.items
						.item
							.icon
								i.icon.home
							.time 详细信息
							.content
								.ui.segment.basic
									.ui.form
										.fields
											.field.three.wide
												label 名称
												div(c-widget="input; bind:editItem.name ")
											.field.three.wide
												label 编号
												div(c-widget="input; bind:editItem.code")
										.fields
											.field.three.wide
												label 价格
												div(c-widget="input; bind:editItem.price")
						.item
							.icon
								i.icon.fax
							.time 生产信息
							.content
								.ui.segment.basic
									.ui.form
										.fields
											.field.three.wide
												label 生产日期
												div(c-widget="input; bind:editItem.pd")
											.field.three.wide
												label 代理商
												div(c-widget="input; bind:editItem.shop")
										.fields
											.field.three.wide
												label 原材料
												div(c-widget="input;")
											.field.three.wide
												label 原材料厂商
												div(c-widget="input;")
						.item
							.icon
								i.icon.lab
							.time 产品包装
							.content
								.ui.segment.basic
									.ui.form
										.fields
											.field.two.wide
												label 长度
												div(c-widget="input;")
											.field.two.wide
												label 宽度
												div(c-widget="input; ")
											.field.two.wide
												label 高度
												div(c-widget="input; ")
						.item
							.icon
								i.icon.disk.outline
							.time 其他信息
							.content
								.ui.segment.basic
									.ui.form
										.fields
											.seven.wide.field
												label 备注
												textarea

			div.ui.segment.basic

					div.negative.large(c-widget="button;icon:remove; caption:取消; click:cancel")
					div.positive.large(c-widget="button;icon:checkmark; caption:提交; click:ok")






append scripts
	script(src="./example/crud.js")