extends ../.cola
append head
	link(rel="stylesheet", type="text/css", href="./example/crud.css")
block body
	div#mainView
		ul.form.ui.cn.floating
			li
				label 公司
				div.mini(c-widget="input")
			li
				label 部门
				div.mini(c-widget="input")
			li
				label 催收组
				div.mini(c-widget="input")
			li
				label 催收员
				div.mini(c-widget="input")
			li
				label 委案日期
				div.mini(c-widget="input")
			li
				label 结案日期
				div.mini(c-widget="input")
			li
				button.blue(c-widget="Button; icon:search; caption:查询;")

		.floating.content-background(style="margin-top:0.6em")

			div#productTable
				template(name="ygCount")
					div.num(c-bind="item.ygCount+'次'")
				template(name="csStatus")
					div.status(c-bind="item.csStatus" c-classname="getColor(item.csStatus)+' status'")
				template(name="dgDate")
					div.date(c-bind="item.dgDate")
				template(name="wtf")
					div.fang(c-bind="item.wtf")
				template(name="slf")
					div.fang(c-bind="item.slf")
				template(name="waDate")
					div.date(c-bind="item.waDate")
				template(name="syDay")
					div.num(c-bind="item.syDay+'天'")
				template(name="waje")
					div.amount(c-bind="item.waje")
				template(name="yhje")
					div.amount(c-bind="formatNumber(item.yhje,'¥##,###.00')")
				template(name="qs")
					div.num(c-bind="item.qs+'期'")
				template(name="name")
					div.name(c-bind="item.name")
				template(name="id")
					div.id(c-bind="item.id")
				template(name="cardNo")
					div.card-no(c-bind="item.cardNo")
				template(name="region")
					div.region(c-bind="item.region")
				template(name="csz")
					div.csz(c-bind="item.csz")
				template(name="csy")
					div.csy(c-bind="item.csy")
			.secondary(c-widget="pager; bind:items;")
				.control.item
					.ui.basic.segment
						a.basic(c-widget="button;icon:edit; caption:修改; click:edit")
						a.basic(c-widget="button;icon:erase; caption:删除;")
				.right.menu
					a.item(page-code="pages")

	#editLayer.default-background
		.h-box(style={height: "4em"}).dark-background
			.flex-box
				.ui.segment.basic
					h4.dark-background
						i.edit.icon
						span 产品信息维护
			.box
				.ui.basic.segment
					div.basic.circular(c-widget="button; icon:angle right; iconPosition:right; caption:返回; click:back")
		.content
			div.ui.segment
				.ui.time-line.circular
					.items
						.item
							.icon
								i.icon.home
							.time 详细信息
							.content
								.ui.segment.basic
									.ui.form
										.fields
											.field.three.wide
												label 名称
												div(c-widget="input; ")
											.field.three.wide
												label 编号
												div(c-widget="input; ")
										.fields
											.field.three.wide
												label 分类
												div(c-widget="input; ")
											.field.three.wide
												label 价格
												div(c-widget="input; ")
						.item
							.icon
								i.icon.fax
							.time 生产信息
							.content
								.ui.segment.basic
									.ui.form
										.fields
											.field.three.wide
												label 生产日期
												div(c-widget="input; ")
											.field.three.wide
												label 生产商
												div(c-widget="input; ")
										.fields
											.field.three.wide
												label 原材料
												div(c-widget="input; ")
											.field.three.wide
												label 原材料厂商
												div(c-widget="input; ")
						.item
							.icon
								i.icon.lab
							.time 产品规格
							.content
								.ui.segment.basic
									.ui.form
										.fields
											.field.two.wide
												label 长度
												div(c-widget="input; ")
											.field.two.wide
												label 宽度
												div(c-widget="input; ")
											.field.two.wide
												label 高度
												div(c-widget="input; ")
						.item
							.icon
								i.icon.disk.outline
							.time 其他信息
							.content
								.ui.segment.basic
									.ui.form
										.fields
											.seven.wide.field
												label 备注
												textarea
				.fields
					div.negative(c-widget="button;icon:remove; caption:取消")
					div.positive(c-widget="button;icon:checkmark; caption:提交")





append scripts
	script(src="./example/crud.js")